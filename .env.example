# 應用程式配置
DEBUG=true
SECRET_KEY= generate_your_own_key_here

# 資料庫配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=自己的密碼
DB_NAME=自己的資料庫

# .env 檔案
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://127.0.0.1:5173


DATABASE_URL=mysql+pymysql://root:自己的密碼@localhost:3306/自己的資料庫

# JWT 配置
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# 日誌配置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# 外部服務配置
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=gemma3:1b

# 開發環境配置範例 (取消註解以啟用)
# DEBUG=true
# LOG_LEVEL=DEBUG
# LOG_FORMAT=console
# LOG_TO_FILE=false